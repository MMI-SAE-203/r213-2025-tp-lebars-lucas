---
const { ...offre } = Astro.props;
---



<div class="max-w-sm rounded-lg overflow-hidden shadow-lg bg-gradient-to-r from-teal-700 to-teal-900 text-white m-4  flex flex-col items-center">
    <img class="w-full h-48 object-cover" src={offre.img} alt={offre.nomMaison} />
    <div class="px-6 py-4 text-center">
        <div class="font-bold text-xl mb-2">{offre.nomMaison}</div>
    </div>
    <div class="px-6 pt-4 pb-2 text-center">
        {offre.favori ? (
            <span class="inline-block bg-yellow-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">⭐ Favori</span>
        ) : (
            <span class="inline-block bg-red-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">❌ Non Favori</span>
        )}
    </div>
    <a href={`/offres/${offre.id}`} class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded-full shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:scale-105 active:scale-95 mb-4">
        Voir plus
    </a>
</div>

